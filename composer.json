{
    "$schema": "https://getcomposer.org/schema.json",
    "name": "laraveldaily/starter-kit",
    "type": "project",
    "description": "LaravelDaily Starter Kit for the Laravel framework.",
    "keywords": [
        "laravel",
        "framework"
    ],
    "license": "MIT",
    "require": {
        "php": "^8.4",
        "blade-ui-kit/blade-icons": "^1.8",
        "laravel/framework": "^12.24",
        "laravel/tinker": "^2.10.1",
        "owenvoke/blade-fontawesome": "^2.9.1"
    },
    "require-dev": {
        "barryvdh/laravel-debugbar": "^3.16",
        "barryvdh/laravel-ide-helper": "^3.6",
        "fakerphp/faker": "^1.24.1",
        "larastan/larastan": "^3.6",
        "laravel/pail": "^1.2.3",
        "laravel/pint": "^1.24",
        "laravel/sail": "^1.44",
        "mockery/mockery": "^1.6.12",
        "nunomaduro/collision": "^8.8.2",
        "pestphp/pest": "^3.8.2",
        "pestphp/pest-plugin-laravel": "^3.2",
        "pestphp/pest-plugin-type-coverage": "^3.6.1",
        "rector/rector": "^2.1.4"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/",
            "Database\\Factories\\": "database/factories/",
            "Database\\Seeders\\": "database/seeders/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "post-autoload-dump": [
            "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
            "@php artisan package:discover --ansi"
        ],
        "post-update-cmd": [
            "@php artisan vendor:publish --tag=laravel-assets --ansi --force"
        ],
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "@php artisan key:generate --ansi",
            "@php -r \"file_exists('database/database.sqlite') || touch('database/database.sqlite');\"",
            "@php artisan migrate --graceful --ansi"
        ],
        "dev": [
            "Composer\\Config::disableProcessTimeout",
            "npx concurrently -c \"#93c5fd,#c4b5fd,#fb7185,#fdba74\" \"php artisan queue:listen --tries=1\" \"php artisan pail --timeout=0\" \"npm run dev\" --names=server,queue,logs,vite"
        ],
        "ide-helper": [
            "@php artisan clear-compiled",
            "@php artisan ide-helper:generate",
            "@php artisan ide-helper:meta",
            "@php artisan ide-helper:models --nowrite"
        ],
        "lint": [
            "pint",
            "@refactor"
        ],
        "fresh": [
            "@php artisan migrate:fresh --seed"
        ],
        "format": [
            "./vendor/bin/pint"
        ],
        "quality": [
            "@ide-helper",
            "@lint",
            "@test"
        ],
        "pre-commit": [
            "echo 'üîç Running pre-commit checks...'",
            "@test:lint",
            "@test",
            "echo '‚úÖ All checks passed! Ready for commit.'"
        ],
        "pre-push": [
            "echo 'üöÄ Running pre-push checks...'",
            "@format",
            "@test:type-coverage",
            "npm run build",
            "echo '‚úÖ All checks passed! Ready for push.'"
        ],
        "refactor": "rector",
        "test:type-coverage": "pest --type-coverage --min=100",
        "test:lint": [
            "pint --test",
            "@test:refactor"
        ],
        "test:unit": "pest --parallel",
        "test:types": "phpstan",
        "test:refactor": "rector --dry-run",
        "test": [
            "@test:type-coverage",
            "@test:unit",
            "@test:lint",
            "@test:refactor"
        ],
        "optimize": [
            "@php artisan config:cache",
            "@php artisan route:cache",
            "@php artisan view:cache",
            "@php artisan event:cache",
            "echo '‚ö° Application optimized for production!'"
        ],
        "build": [
            "npm run build",
            "echo 'üì¶ Assets built successfully!'"
        ]
    },
    "extra": {
        "laravel": {
            "dont-discover": []
        }
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "php-http/discovery": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
